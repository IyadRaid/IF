@model IF.Web.Models.Eventspresentationmodel
@{
    ViewBag.Title = "Home Page";
}
<div class="spec ">
    <h3>Debaser Events</h3>
    <div class="ser-t">
        <b></b>
        <span><i></i></span>
        <b class="line"></b>
    </div>
</div>
<div>

</div>
<div class="container">
    @using (Html.BeginForm("Index", "Home"))
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-4 ">
                        @Html.LabelFor(c => c.ToDate)
                        <div class="input-group">
                            @Html.TextBoxFor(c => c.fromDate, new { @class = "form-control datee", id = "from", autocomplete = "off", data_date_format = "yyyymmdd", @readonly = "true" })
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>

                    </div>
                    <div class="col-xs-4">
                        @Html.LabelFor(c => c.ToDate)
                        <div class="input-group">
                            @Html.TextBoxFor(c => c.ToDate, new { @class = "form-control datee", id = "to", autocomplete = "off", data_date_format = "yyyymmdd", @readonly = "true" })
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>


                    </div>
                    <div class="col-xs-4">

                        @Html.LabelFor(c => c.Event)
                        @Html.DropDownListFor(m => m.EventId, Model.Event, new { @class = "form-control", autocomplete = "off", })
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-xs-3">
                        <input id="btnsearch" type="submit" class="btn btn-danger btn-block my-cart-btn my-cart-b" value="Sök" />
                    </div>
                </div>
            </div>
        </div>
    }

</div>
<div class="product">
    <div class="container">
        <div class="tab-pane active text-style" id="tab1">
            @if (Model.Events == null || Model.Events.Count == 0)
            {
                <div class="alert alert-danger">Var vänlig fyll i formuläret ovan!</div>
            }
            else
            {
                <div class=" con-w3l">
                    @foreach (var item in Model.Events)
                    {
                        <div class="col-md-4 pro-1">
                            <div class="col-m">
                                <a href="#" data-toggle="modal" data-target="#myModal2" class="offer-img">
                                    <img src="@item.ImageUrl" class="img-responsive" alt="">
                                </a>
                                <div class="mid-1">
                                    <div class="women">
                                        <h6>@item.Event</h6>
                                    </div>
                                    <div class="mid-2">
                                        <p>Datum:  <em class="item_price">@item.EventDate</em></p>
                                        <div class="block">
                                            <div class="starbox small ghosting"> </div>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                    <div class="add">
                                        <button class="btn btn-danger my-cart-btn my-cart-b" data-image="images/of1.png" onclick="location.href='@item.EventUrl'">Mer information!</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="clearfix"></div>
                </div>
            }
        </div>
    </div>
</div>

@section script{
    <script>

        $(function () {

            $('.datee').datepicker();
        });

    </script>
}

